<div class="page-header">
  <h3>Schedule #<%= @schedule.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Location</dt>
      <dd><%= @schedule.location_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/schedules" class="btn btn-primary">
        Back
      </a>
      <a href="/schedules/<%= @schedule.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_schedule/<%= @schedule.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Schedule has many teams -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Teams
      </li>

      <% @schedule.teams.each do |team| %>
        <li class="list-group-item">
          <a href="/teams/<%= team.id %>">
            <%= team.created_at %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/teams/<%= team.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/teams/<%= team.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_team/<%= team.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_team" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for location -->
      <div class="form-group">
        <label for="location" class="control-label">
          Location
        </label>

        <input type="text" id="location" name="location" placeholder="Location" class="form-control" value="">
      </div>

      <!-- Label and input for divisionleague -->
      <div class="form-group">
        <label for="divisionleague" class="control-label">
          Divisionleague
        </label>

        <textarea id="divisionleague" name="divisionleague" placeholder="Divisionleague" class="form-control" rows="3"></textarea>
      </div>

      <!-- Label and input for schedule -->
      <div class="form-group">
        <label for="schedule" class="control-label">
          Schedule
        </label>

        <input type="text" id="schedule" name="schedule" placeholder="Schedule" class="form-control" value="">
      </div>

      <!-- Label and input for schedule_id -->
      <input type="hidden" name="schedule_id" value="<%= @schedule.id %>">

      <button class="btn btn-block btn-success">
        Create Team
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
