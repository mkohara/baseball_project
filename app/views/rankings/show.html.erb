<div class="page-header">
  <h3>Ranking #<%= @ranking.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Player</dt>
      <dd>
        <% if @ranking.player.present? %>
          <a href="/players/<%= @ranking.player_id %>">
            <%= @ranking.player.statistics %>
          </a>
        <% end %>
      </dd>

      <dt>Scout</dt>
      <dd>
        <% if @ranking.scout.present? %>
          <a href="/scouts/<%= @ranking.scout_id %>">
            <%= @ranking.scout.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/rankings" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @ranking.scout %>
        <a href="/rankings/<%= @ranking.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_ranking/<%= @ranking.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
