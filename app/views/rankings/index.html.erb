<div class="page-header">
  <h1>
    Rankings
    <a href="/rankings/new" class="btn btn-lg btn-success">New Ranking</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "rankings_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :player_statistics_cont, "Player statistics contains" %>
      <%= f.text_field :player_statistics_cont, :class => "form-control", :placeholder => "Player statistics contains" %>
    </div>

<div class="form-group">
      <%= f.label :scout_email_cont, "Scout email contains" %>
      <%= f.text_field :scout_email_cont, :class => "form-control", :placeholder => "Scout email contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/rankings" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#rankings_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Player</th>
        <th>Scout</th>
        <th>Actions</th>
      </tr>

      <% @rankings.each do |ranking| %>
      <tr>
        <td>
          <% if ranking.player.present? %>
            <a href="/players/<%= ranking.player.id %>">
              <%= ranking.player.statistics %>
            </a>
          <% end %>
        </td>
        <td>
          <% if ranking.scout.present? %>
            <a href="/scouts/<%= ranking.scout.id %>">
              <%= ranking.scout.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/rankings/<%= ranking.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == ranking.scout %>
            <a href="/rankings/<%= ranking.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_ranking/<%= ranking.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @rankings, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
