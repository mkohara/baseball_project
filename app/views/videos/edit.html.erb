<!-- Validation failure messages -->
<% if @video.errors.any? %>
  <% @video.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Video #<%= @video.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_video/<%= @video.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for player_id -->
      <div class="form-group">
        <label for="player_id" class="control-label">
          Player
        </label>

        <input type="text" id="player_id" name="player_id" placeholder="Player" class="form-control" value="<%= @video.player_id %>">
      </div>

      <button class="btn btn-warning">
        Update Video
      </button>
      or
      <a href="/videos/<%= @video.id %>">Cancel</a>
    </form>
  </div>
</div>
