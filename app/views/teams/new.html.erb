<!-- Validation failure messages -->
<% if @team.errors.any? %>
  <% @team.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Team</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_team" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for location -->
      <div class="form-group">
        <label for="location" class="control-label">
          Location
        </label>

        <input type="text" id="location" name="location" placeholder="Location" class="form-control" value="<%= @team.location %>">
      </div>

      <!-- Label and input for divisionleague -->
      <div class="form-group">
        <label for="divisionleague" class="control-label">
          Divisionleague
        </label>

        <textarea id="divisionleague" name="divisionleague" placeholder="Divisionleague" class="form-control" rows="3"><%= @team.divisionleague %></textarea>
      </div>

      <!-- Label and input for schedule -->
      <div class="form-group">
        <label for="schedule" class="control-label">
          Schedule
        </label>

        <input type="text" id="schedule" name="schedule" placeholder="Schedule" class="form-control" value="<%= @team.schedule %>">
      </div>

      <!-- Label and input for schedule_id -->
      <div class="form-group">
        <label for="schedule_id" class="control-label">
          Schedule
        </label>

        <%= select_tag(:schedule_id, options_from_collection_for_select(Schedule.all, :id, :location_id, @team.schedule_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Team
      </button>
      or
      <a href="/teams">Cancel</a>
    </form>
  </div>
</div>
