<div class="page-header">
  <h3>Team #<%= @team.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Location</dt>
      <dd><%= @team.location %></dd>

      <dt>Divisionleague</dt>
      <dd><%= @team.divisionleague %></dd>

      <dt>Schedule</dt>
      <dd><%= @team.schedule %></dd>

      <dt>Schedule</dt>
      <dd><%= @team.schedule_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/teams" class="btn btn-primary">
        Back
      </a>
      <a href="/teams/<%= @team.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_team/<%= @team.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Team has many players -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Players
      </li>

      <% @team.players.each do |player| %>
        <li class="list-group-item">
          <a href="/players/<%= player.id %>">
            <%= player.statistics %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/players/<%= player.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/players/<%= player.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_player/<%= player.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_player" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for statistics -->
      <div class="form-group">
        <label for="statistics" class="control-label">
          Statistics
        </label>

        <input type="text" id="statistics" name="statistics" placeholder="Statistics" class="form-control" value="">
      </div>

      <!-- Label and input for scout_id -->
      <div class="form-group">
        <label for="scout_id" class="control-label">
          Scout
        </label>

        <input type="text" id="scout_id" name="scout_id" placeholder="Scout" class="form-control" value="">
      </div>

      <!-- Label and input for team_id -->
      <input type="hidden" name="team_id" value="<%= @team.id %>">

      <button class="btn btn-block btn-success">
        Create Player
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
