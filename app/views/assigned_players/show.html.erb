<div class="page-header">
  <h3>Assigned Player #<%= @assigned_player.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @assigned_player.user.present? %>
          <a href="/scouts/<%= @assigned_player.user_id %>">
            <%= @assigned_player.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Player</dt>
      <dd>
        <% if @assigned_player.player.present? %>
          <a href="/players/<%= @assigned_player.player_id %>">
            <%= @assigned_player.player.statistics %>
          </a>
        <% end %>
      </dd>

      <dt>Name</dt>
      <dd><%= @assigned_player.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/assigned_players" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @assigned_player.user %>
        <a href="/assigned_players/<%= @assigned_player.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_assigned_player/<%= @assigned_player.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
